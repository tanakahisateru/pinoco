{
    "name": "pinoco/pinoco",
    "homepage": "https://github.com/tanakahisateru/pinoco",
    "description": "Web site development framework using PHP and (mainly) PHPTAL",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "microframework",
        "phptal"
    ],
    "authors": [
        {
            "name": "Hisateru Tanaka",
            "email": "tanakahisateru@gmail.com",
            "homepage": "http://flavors.me/tanakahisateru"
        }
    ],
    "require": {
        "php": ">=5.1.2"
    },
    "require-dev": {
        "phptal/phptal": "^1.1",
        "smarty/smarty": ">=3.1.0",
        "twig/twig": ">=1.3.0",
        "phpunit/phpunit": "^4.8|^5.7"
    },
    "autoload": {
        "psr-0": {
            "Pinoco": "src/"
        }
    },
    "scripts" :{
        "test": ["./vendor/bin/phpunit"],
        "tests": ["@cs", "@phmd", "@phpstan", "@test"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix ./ -v --dry-run --rules=@PSR2"],
        "cs-fix": ["php-cs-fixer fix ./ -v"],
        "phpmd":  "phpmd src,test text ./phpmd.xml",
        "phpstan": "phpstan analyse -l max -c phpstan.neon src test --no-progress --no-interaction"
    }
}
